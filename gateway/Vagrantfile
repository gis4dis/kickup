Vagrant.configure("2") do |config|

  config.vm.box = "geerlingguy/ubuntu1604"
  # config.vm.box_version = "1.1.4"
  config.vm.network :private_network, ip: '192.168.49.49'

  config.vm.provider :virtualbox do |vb|
      vb.memory = 2048
      vb.linked_clone = true
  end


  # Disable the new default behavior introduced in Vagrant 1.7, to
  # ensure that all Vagrant machines will use the same SSH key pair.
  # See https://github.com/mitchellh/vagrant/issues/5005
  config.ssh.insert_key = false

  # See https://github.com/mitchellh/vagrant/issues/936#issuecomment-7179034
  config.vm.synced_folder "../poster/", "/opt/poster-app/poster", id: "project_root", type: "rsync"
  #   # owner: "vagrant", group: "vagrant", mount_options: ["dmode=777,fmode=666"]

  config.vm.synced_folder "../poster/src", "/opt/poster-app/src", id: "source_root", type: "rsync", rsync__exclude: "/wsgi.py"
    # owner: "vagrant", group: "vagrant", mount_options: ["dmode=777,fmode=666"]


  # Uncomment lines below for faster installation - change mirrors and preinstall
  config.vm.provision "shell",
    inline: "sudo sed -i 's|http://us.archive|http://archive|g' /etc/apt/sources.list;
    cat /etc/apt/sources.list; sudo apt-get clean; sudo apt-get update; apt-get install python-pip python3-pip python-virtualenv python3-virtualenv -y"
    # inline: "sudo sed -i 's|http://us.archive.ubuntu.com/ubuntu/|mirror://mirrors.ubuntu.com/mirrors.txt|g' /etc/apt/sources.list;

  #
  # Then run Ansible from the Vagrant Host
  #
  config.vm.provision "ansible" do |ansible|
    ansible.verbose = "v"
    ansible.raw_arguments = [ '--diff' ]

    ansible.playbook = "playbook.yml"
    ansible.sudo_user = 'root'
    ansible.sudo = true

    ansible.groups = {
      'frontend'   => [ 'default' ],
      'vagrant'    => [ 'default' ],    #
    }

    if ENV['ANSIBLE_TAGS'] then ansible.tags = ENV['ANSIBLE_TAGS']; end

  end

end
